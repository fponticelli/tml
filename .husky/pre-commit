#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting, formatting, and tests before committing
echo "Running lint:fix..."
pnpm lint:fix

echo "Running format:fix..."
pnpm format:fix

echo "Running lint checks..."
pnpm lint

echo "Running format checks..."
pnpm format

echo "Running tests..."
pnpm test
