{
  "name": "tml-vscode",
  "displayName": "TML Language Support",
  "description": "Syntax highlighting for Typed Markup Language (TML)",
  "version": "0.0.1",
  "publisher": "tml",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fponticelli/tml.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:tml"
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tml",
        "aliases": [
          "Typed Markup Language",
          "TML"
        ],
        "extensions": [
          ".tml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tml",
        "scopeName": "source.tml",
        "path": "./syntaxes/tml.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn webpack:prod",
    "compile": "webpack --config ./webpack.config.js",
    "webpack:prod": "webpack --mode production --config ./webpack.config.js",
    "watch": "webpack --watch --config ./webpack.config.js",
    "prepare-package": "node ./scripts/prepare-package.js",
    "build": "yarn prepare-package && yarn webpack:prod && npx @vscode/vsce package",
    "test": "echo \"No tests yet\""
  },
  "vsce": {
    "dependencies": true,
    "yarn": true,
    "bundleLocalDependencies": true
  },
  "dependencies": {
    "@tml/parser": "*"
  },
  "devDependencies": {
    "@types/node": "22.15.3",
    "@types/vscode": "1.99.1",
    "@vscode/vsce": "3.3.2",
    "ts-loader": "^9.5.2",
    "typescript": "5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
